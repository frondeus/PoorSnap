<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BTApplication.ChatPage" Title="Czat">
	<ContentPage.Content>
		<StackLayout>
			<ListView x:Name="Output" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<ListView.ItemTemplate>
          <viewcell>
            <StackLayout orientation="Vertical">
              <Grid BackgroundColor="White" HeightRequest="10"/>
                   <StackLayout orientation="Vertical" Padding="20" BackgroundColor="Purple">
                       <Label text="{Binding Name}" Color="Blue" Font="Bold"/>
                       <Label text="{Binding TextContent}" Color="White"/>
                   </StackLayout>
              </StackLayout>
          </viewcell>
				</ListView.ItemTemplate>
			</ListView>
      <Entry x:Name="UserName" Placeholder="Username" Color="Blue" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="160"></Entry>
			<Editor x:Name="Input" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="160"></Editor>
			<Button Text="WyÅ›lij" Clicked="Handle_Clicked"></Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
